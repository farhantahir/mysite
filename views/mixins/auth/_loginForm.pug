mixin loginForm()
    form(action='/login' method="post")
        div.form-group
            label(class='control-label' for='email') Email
            input(
                type="email"
                class="form-control"
                id="email"
                placeholder="Email"
                value=(old && old.email) ? old.email : ''
                name="email"
                required
                autofocus
            )
        div.form-group
            label(class='control-label' for='password') Password
            input(
                type="password"
                class="form-control"
                id="formInput11"
                name="password"
                placeholder="Password"
                required
            )
        div.checkbox
          label.control-label
            input(type="checkbox" name="remember")
            | Remember me
          a(href="/password/reset" class="pull-right") Forgot password?

        button(class='btn button-blue') Sign in